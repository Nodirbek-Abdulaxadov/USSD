@using USSD.Admin.ViewModels
@{
    ViewData["Title"] = "Category Add Page";
    Layout = "_Layout";
}

@model CategoryAddViewModel

<div class="main-content">
        <header>
            <div class="user-wrapper">
                <img src="~/images/user.png" width="40" height="40" alt="" />
                <div>
                    <h4>Nodirbek Abdulaxadov</h4>
                    <small>Supper admin</small>
                </div>
            </div>

            @*<h5>
                <a href="">O'zb</a> |
                <a href="">Rus</a>
            </h5>*@
        </header>

        <main>
            <div class="box-header position-relative table-header mt-2">
                <div class="d-flex justify-content-between mt-3 com-header">
                    <h3>Yangi kategoriya qo'shish</h3>
                </div>
            </div>
            <form asp-controller="category" asp-action="add" method="post">        
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="category.Id"></label>
                    <input type="text" class="form-control" asp-for="category.Id" placeholder="Kategoriya Id">
                </div>
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="category.CategoryName"></label>
                    <input type="text" class="form-control" asp-for="category.CategoryName" placeholder="Ketagoriya nomi">
                </div>
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="category.OperatorId"></label><br/>
                    @*<input type="text" class="form-control" asp-for="OperatorId">*@
                    <select class="form-select" style="width: 100%; padding: 5px;" asp-for="@Model.category.OperatorId">
                        @foreach (var item in Model.operators)
                           {
                                <option value=@item.Id>@item.OpeatorName</option>
                           }
                    </select>
                </div>
                <div class="button-group d-flex justify-content-lg-center">
                    <a asp-controller="operator" asp-action="index" class="mx-2">
                        <span class="btn btn-info" style="width: 120px;">Bekor qilish</span>
                    </a>
                    <button type="submit" class="btn btn-success mx-2" style="width: 120px;">
                        Saqlash
                    </button>
                </div>
            </form>
        </main>
</div>
