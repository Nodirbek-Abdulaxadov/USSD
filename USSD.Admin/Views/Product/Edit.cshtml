@{
    ViewData["Title"] = "Product Edit Page";
}

@model Product

<div class="main-content">
        <header>
            <div class="user-wrapper">
                <img src="~/images/user.png" width="40" height="40" alt="" />
                <div>
                    <h4>Nodirbek Abdulaxadov</h4>
                    <small>Supper admin</small>
                </div>
            </div>

            @*<h5>
                <a href="">O'zb</a> |
                <a href="">Rus</a>
            </h5>*@
        </header>

        <main>
            <div class="box-header position-relative table-header mt-2">
                <div class="d-flex justify-content-between mt-3 com-header">
                    <h3>Yangi operator qo'shish</h3>
                </div>
            </div>
            <form asp-controller="category" asp-action="edit" method="post">        
                
                <input type="hidden" asp-for="Id" value="@Model.Id">
                
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="TitleUz">TitleUz</label>
                    <input type="text" class="form-control" asp-for="TitleUz" value="@Model.TitleUz">
                </div>
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="TitleRu">TitleRu</label>
                    <input type="text" class="form-control" asp-for="TitleRu" value="@Model.TitleRu">
                </div>
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="DescriptionUz">DescriptionUz</label>
                     <textarea asp-for="DescriptionUz" class="form-control" id="description" placeholder="DescriptionUz"></textarea>
                </div>
                 <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="DescriptionRu">DescriptionRu</label>
                     <textarea asp-for="DescriptionRu" class="form-control" id="description" placeholder="DescriptionRu"></textarea>
                </div>
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="ExpiryDate">ExpiryDate</label>
                    <input type="text" class="form-control" asp-for="ExpiryDate" value="@Model.ExpiryDate">
                </div>
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="Valume">Valume</label>
                    <input type="text" class="form-control" asp-for="Valume" value="@Model.Valume">
                </div>
                 <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="Price">Valume</label>
                    <input type="text" class="form-control" asp-for="Price" value="@Model.Price">
                </div>
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="Code">Valume</label>
                    <input type="text" class="form-control" asp-for="Code" value="@Model.Code">
                </div>
                <div class="form-group mx-4" style="padding: 10px; font-size: 18px;">
                    <label asp-for="SubCategoryId">Valume</label>
                    <input type="text" class="form-control" asp-for="SubCategoryId" value="@Model.SubCategoryId">
                </div>
                <div class="button-group d-flex justify-content-lg-center">
                    <a asp-controller="category" asp-action="index" class="mx-2">
                        <span class="btn btn-info" style="width: 120px;">Bekor qilish</span>
                    </a>
                    <button type="submit" class="btn btn-success mx-2" style="width: 120px;">
                        Saqlash
                    </button>
                </div>
            </form>

        </main>
    </div>
